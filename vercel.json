{
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)", 
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { 
          "key": "Access-Control-Allow-Origin",
          "value": "https://juego-preguntas-andres.netlify.app" 
        },
        { 
          "key": "Access-Control-Allow-Methods", 
          "value": "GET,DELETE,POST,PUT,OPTIONS" 
        },
        { 
          "key": "Access-Control-Allow-Headers",
          "value": "Authorization, X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}